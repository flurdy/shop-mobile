# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                      controllers.ShoppingListController.index
GET     /index.html            controllers.ShoppingListController.index
GET     /purchased.html            controllers.ShoppingListController.purchased

GET     /login.html            controllers.Application.showLogin()
GET     /login            controllers.Application.redirectToIndex
POST    /login                 controllers.Application.authenticate
POST    /register              controllers.Application.register
GET     /register            controllers.Application.redirectToIndex
GET     /logout                controllers.Application.logout

GET    /items                   controllers.Application.redirectToIndex
POST    /items                  controllers.ShoppingItemController.addItem
GET    /items/:name/            controllers.ShoppingItemController.showItem(name: String)
GET    /items/:name/index.html  controllers.ShoppingItemController.showItem(name: String)
POST    /items/:name/update     controllers.ShoppingItemController.updateItem(name: String)
PUT    /items/:name/             controllers.ShoppingItemController.updateItem(name: String)
POST    /items/:name/delete     controllers.ShoppingItemController.removeItem(name: String)
DELETE    /items/:name/          controllers.ShoppingItemController.removeItem(name: String)
POST    /items/:name/purchase   controllers.ShoppingItemController.purchaseItem(name: String)
PUT    /items/:name/purchase    controllers.ShoppingItemController.purchaseItem(name: String)

GET    /items/multiple.html     controllers.ShoppingListController.showMultipleItemsForm
POST    /items/multiple/     controllers.ShoppingListController.addMultipleItems
GET    /items/popular.html     controllers.ShoppingListController.showPopularItemsForm


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
