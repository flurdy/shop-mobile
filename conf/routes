# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET    /item                   controllers.Application.redirectToIndex
POST    /item                  controllers.Application.addItem
GET    /item/:name             controllers.Application.showItem(name: String)
POST    /item/:name/update     controllers.Application.updateItem(name: String)
PUT    /item/:name             controllers.Application.updateItem(name: String)
POST    /item/:name/delete     controllers.Application.removeItem(name: String)
DELETE    /item/:name          controllers.Application.removeItem(name: String)
POST    /item/:name/purchase   controllers.Application.purchaseItem(name: String)
PUT    /item/:name/purchase    controllers.Application.purchaseItem(name: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
